{
    "name": "salaros/wordpress-template",
    "description": "A Wordpress site template which should help concious developers to keep developing for Wordpress, staying away from its sloopy code style",
    "type": "project",
    "authors": [{
        "name": "Zhmayev Yaroslav",
        "email": "salaros@yandex.ru",
        "homepage": "https://github.com/salaros",
        "role": "Developer"
    }],
    "repositories": [{
        "type": "composer",
        "url": "http://wpackagist.org"
    }],
	"minimum-stability": "stable",
	"prefer-stable": true,
    "require": {
		"wp-cli/wp-cli": "~0.20",
        "johnpbloch/wordpress": "*",
        "anolilab/wordpress-salt-generator": "*",
        "fxp/composer-asset-plugin": "*",
        "wpackagist-plugin/timber-library": "*",
        "wpackagist-plugin/advanced-custom-fields": "*",
		"salaros/wordpress-template-theme": "*"
    },
    "extra": {
        "wordpress-install-dir": "public",
        "installer-paths": {
            "wp-content/plugins/{$name}/": [
                "type:wordpress-plugin"
            ],
            "wp-content/themes/{$name}/": [
                "type:wordpress-theme"
            ]
        },
        "asset-installer-paths": {
            "npm-asset-library": "wp-content/npm-asset",
            "bower-asset-library": "wp-content/bower-asset"
        }
    },
	"scripts": {
		"post-create-project-cmd": [
            "php -r \"copy('.env.example', '.env');\"",
			"php -r \"copy('wp-cli.yml', 'wp-cli.local.yml');\"",
			"bash scripts/config.sh"
		],
        "post-root-package-install": [
            "Anolilab\\Wordpress\\SaltGenerator\\Generator::addSalts"
        ],
		"initialize" : [
			"bash scripts/initialize.sh"
		]
	},
    "config": {
        "generate-salts": true
    },
    "autoload": {
        "psr-4": {}
    }
}
